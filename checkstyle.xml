<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Vérifie l'encodage -->
    <property name="charset" value="UTF-8"/>

    <module name="TreeWalker">

        <!-- Nom des classes (Majuscule + CamelCase) -->
        <module name="TypeName">
            <message key="name.invalidPattern"
                     value="❌ Le nom de la classe ''{0}'' doit commencer par une majuscule et respecter le CamelCase."/>
        </module>

        <!-- Nom des variables (minuscule + CamelCase) -->
        <module name="LocalVariableName">
            <message key="name.invalidPattern"
                     value="❌ Le nom de la variable locale ''{0}'' doit commencer par une minuscule et respecter le CamelCase."/>
        </module>

        <!-- Nom des méthodes (minuscule + CamelCase) -->
        <module name="MethodName">
            <message key="name.invalidPattern"
                     value="❌ Le nom de la méthode ''{0}'' doit commencer par une minuscule et respecter le CamelCase."/>
        </module>

        <!-- Nom des attributs de classe (minuscule + CamelCase) -->
        <module name="MemberName">
            <message key="name.invalidPattern"
                     value="❌ Le nom de l'attribut ''{0}'' doit commencer par une minuscule et respecter le CamelCase."/>
        </module>

        <!-- Nom des constantes (MAJUSCULES + Snake Case) -->
        <module name="ConstantName">
            <message key="name.invalidPattern"
                     value="❌ Le nom de la constante ''{0}'' doit être en MAJUSCULES avec des underscores (Snake Case)." />
        </module>

    </module>

</module>
